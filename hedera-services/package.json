{
  "name": "hederanet-hedera-services",
  "version": "1.0.0",
  "description": "Hedera services for HederaNet DePIN",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && solc --bin src/contracts/*.sol -o dist/contracts",
    "token:create-hnet": "ts-node src/tokens/HNET.ts create",
    "token:mint-hec": "ts-node src/tokens/HEC.ts mint",
    "consensus:create-topics": "ts-node src/consensus/index.ts create",
    "file:upload-metadata": "ts-node src/file-service/uploadMetadata.ts",
    "file:store-audit": "ts-node src/file-service/storeAuditReport.ts",
    "file:retrieve": "ts-node src/file-service/retrieveFile.ts",
    "sc:deploy-service-payment": "ts-node src/smart-contracts/deployment/deployServicePayment.ts",
    "test": "jest",
    "test:integration": "jest --runInBand"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.47.0",
    "dotenv": "^16.3.1",
    "solc": "^0.8.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}