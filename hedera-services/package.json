{
  "name": "hederanet-hedera-services",
  "version": "1.0.0",
  "description": "Hedera services for HederaNet DePIN",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:contracts": "mkdir -p dist/contracts && npx solcjs --bin --abi --optimize --base-path src/smart-contracts/contracts -o dist/contracts src/smart-contracts/contracts/EnergyTrading.sol && npx solcjs --bin --abi --optimize --base-path src/smart-contracts/contracts -o dist/contracts src/smart-contracts/contracts/Governance.sol && npx solcjs --bin --abi --optimize --base-path src/smart-contracts/contracts -o dist/contracts src/smart-contracts/contracts/ServicePayment.sol",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "token:create-hnet": "ts-node src/tokens/HNET.ts create",
    "token:create-hec": "ts-node src/tokens/HEC.ts create",
    "token:create-hcc": "ts-node src/tokens/HCC.ts create",
    "token:create-reputation": "ts-node src/tokens/ReputationNFTs.ts create",
    "token:mint-hec": "ts-node src/tokens/HEC.ts mint",
    "token:mint-hcc": "ts-node src/tokens/HCC.ts",
    "token:mint-badge": "ts-node src/tokens/ReputationNFTs.ts",
    "consensus:log-governance": "ts-node src/consensus/GovernanceTopic.ts",
    "consensus:log-quality": "ts-node src/consensus/ServiceQualityTopic.ts",
    "consensus:log-trade": "ts-node src/consensus/EnergyTradingTopic.ts",
    "file:upload-metadata": "ts-node src/file-service/uploadMetadata.ts",
    "file:store-audit": "ts-node src/file-service/storeAuditReport.ts",
    "file:retrieve": "ts-node src/file-service/retrieveFile.ts",
    "sc:deploy-energy": "ts-node src/smart-contracts/deployments/deployEnergyTrading.ts",
    "sc:deploy-service": "ts-node src/smart-contracts/deployments/deployServicePayment.ts",
    "sc:deploy-governance": "ts-node src/smart-contracts/deployments/deployGovernance.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --runInBand --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.47.0",
    "dotenv": "^16.3.1",
    "solc": "^0.8.30"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
